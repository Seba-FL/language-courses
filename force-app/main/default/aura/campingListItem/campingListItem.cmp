<aura:component >
    <aura:attribute name="item" type="Camping_Item__c"/>
    <aura:registerEvent name="updateItem" type="c:addItemEvent"/>
    <lightning:card title="{!v.item.Name}" iconName="action:goal"
                    class="{!v.item.Packed__c ?
                           'slds-theme_success' : ''}">
        <p class="slds-text-heading_medium slds-p-horizontal_small">
           Quantity: <lightning:formattedNumber value="{!v.item.Quantity__c}"/>
        </p>
        <p class="slds-p-horizontal_small">
            Price: {!v.item.Price__c}
        </p>
        <p>
            <lightning:input type="toggle"
                             label="Packed?"
                             name="packed"
                             class="slds-p-around_small"
                             checked="{!v.item.Packed__c}"
                             messageToggleActive="Yes"
                             messageToggleInactive="No"
                             onchange="{!c.packItem}"/>
        </p>
    </lightning:card>
</aura:component>